<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#F5F5F5"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tv_nfcid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="NFCID: 000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="卡号: 12345"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tv_car_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="机号: ABC123"
        android:textSize="20sp"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/tv_unit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="单位名称: "
        android:textSize="20sp"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设备名称: "
        android:textSize="20sp"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="消费金额: "
        android:textSize="20sp"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="时间: 2025-01-01 12:00:00"
        android:textSize="20sp"
        android:textColor="#666666"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/tv_upload_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="☐ 未上传"
        android:textSize="18sp"
        android:textColor="#999999"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="内容: {data}"
        android:textSize="20sp"
        android:visibility="gone" />

</LinearLayout>
